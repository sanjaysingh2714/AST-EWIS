# Data Cleaning – AST-EWIS
# ============================================
# AST-EWIS : Data Cleaning & Preparation
# File: 01_data_cleaning.ipynb
# Dataset: Aadhaar Biometric Updates (UIDAI)
# ============================================

import pandas as pd
import numpy as np

# --------------------------------------------
# Load Dataset
# --------------------------------------------
bio = pd.read_csv("../data/raw/aadhaar_biometric_updates.csv")

# --------------------------------------------
# Basic Inspection
# --------------------------------------------
print("Initial Shape:", bio.shape)
print(bio.head())
print(bio.columns)
print(bio.isnull().sum())

# --------------------------------------------
# Date Conversion
# --------------------------------------------
bio['date'] = pd.to_datetime(bio['date'], format="%d-%m-%Y", errors='coerce')

# --------------------------------------------
# Standardize Text Columns
# --------------------------------------------
bio['state'] = bio['state'].str.upper().str.strip()
bio['district'] = bio['district'].str.upper().str.strip()

# --------------------------------------------
# Handle Missing Values
# --------------------------------------------
bio = bio.fillna(0)

# --------------------------------------------
# Feature Engineering
# --------------------------------------------
bio['total_bio_updates'] = bio['bio_age_5_17'] + bio['bio_age_17_']

# --------------------------------------------
# Sort Data (Time Series Requirement)
# --------------------------------------------
bio = bio.sort_values('date')

# --------------------------------------------
# Monthly Aggregation - District Level
# --------------------------------------------
monthly_bio_district = (
    bio.groupby(
        [pd.Grouper(key='date', freq='M'), 'state', 'district']
    )['total_bio_updates']
    .sum()
    .reset_index()
)

# --------------------------------------------
# Monthly Aggregation - State Level
# --------------------------------------------
monthly_bio_state = (
    bio.groupby(
        [pd.Grouper(key='date', freq='M'), 'state']
    )['total_bio_updates']
    .sum()
    .reset_index()
)

# --------------------------------------------
# Save Processed Data
# --------------------------------------------
monthly_bio_district.to_csv(
    "../data/processed/monthly_bio_district.csv", index=False
)
monthly_bio_state.to_csv(
    "../data/processed/monthly_bio_state.csv", index=False
)

# --------------------------------------------
# Final Check
# --------------------------------------------
print("Cleaning Completed Successfully ✅")
print("District-level shape:", monthly_bio_district.shape)
print("State-level shape:", monthly_bio_state.shape)


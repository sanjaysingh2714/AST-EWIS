import pandas as pd
import matplotlib.pyplot as plt

# --------------------------------------------
# Load Processed Data
# --------------------------------------------
district_df = pd.read_csv("../data/processed/monthly_bio_district.csv")
state_df = pd.read_csv("../data/processed/monthly_bio_state.csv")

district_df['date'] = pd.to_datetime(district_df['date'])
state_df['date'] = pd.to_datetime(state_df['date'])

print("District data shape:", district_df.shape)
print("State data shape:", state_df.shape)

# --------------------------------------------
# 1. National Trend Over Time
# --------------------------------------------
national_trend = (
    state_df.groupby('date')['total_bio_updates']
    .sum()
    .reset_index()
)

plt.figure()
plt.plot(national_trend['date'], national_trend['total_bio_updates'])
plt.title("National Biometric Update Trend Over Time")
plt.xlabel("Date")
plt.ylabel("Total Biometric Updates")
plt.show()

# --------------------------------------------
# 2. Top 10 States by Total Biometric Updates
# --------------------------------------------
top_states = (
    state_df.groupby('state')['total_bio_updates']
    .sum()
    .sort_values(ascending=False)
    .head(10)
)

plt.figure()
top_states.plot(kind='bar')
plt.title("Top 10 States by Biometric Updates")
plt.xlabel("State")
plt.ylabel("Total Updates")
plt.show()

# --------------------------------------------
# 3. Monthly Trend for Top 3 States
# --------------------------------------------
top_3_states = top_states.index[:3]

plt.figure()
for st in top_3_states:
    temp = state_df[state_df['state'] == st]
    plt.plot(temp['date'], temp['total_bio_updates'], label=st)

plt.legend()
plt.title("Monthly Trends for Top 3 States")
plt.xlabel("Date")
plt.ylabel("Biometric Updates")
plt.show()

# --------------------------------------------
# 4. District-Level Volatility (Top 10)
# --------------------------------------------
district_volatility = (
    district_df.groupby(['state', 'district'])['total_bio_updates']
    .std()
    .reset_index()
    .sort_values(by='total_bio_updates', ascending=False)
    .head(10)
)

print("Top 10 Most Volatile Districts:")
print(district_volatility)

# --------------------------------------------
# 5. Seasonal Pattern (Month-wise)
# --------------------------------------------
district_df['month'] = district_df['date'].dt.month

seasonal_pattern = (
    district_df.groupby('month')['total_bio_updates']
    .mean()
    .reset_index()
)

plt.figure()
plt.plot(seasonal_pattern['month'], seasonal_pattern['total_bio_updates'])
plt.title("Seasonal Pattern in Biometric Updates")
plt.xlabel("Month")
plt.ylabel("Average Updates")
plt.show()

# --------------------------------------------
# 6. High-Spike District Detection (Pre-Anomaly View)
# --------------------------------------------
district_df['rolling_mean'] = (
    district_df.groupby(['state', 'district'])['total_bio_updates']
    .transform(lambda x: x.rolling(6, min_periods=1).mean())
)

district_df['spike_ratio'] = (
    district_df['total_bio_updates'] / district_df['rolling_mean']
)

spike_districts = district_df[district_df['spike_ratio'] > 2]

print("Potential Early-Warning Spikes:")
print(spike_districts[['date', 'state', 'district', 'total_bio_updates']].head(10))


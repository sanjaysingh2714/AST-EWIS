# File: 03_anomaly_detection.ipynb
# Purpose: Detect abnormal societal signals
# =====================================================

import pandas as pd
import numpy as np

# -----------------------------------------------------
# Load Processed District-Level Data
# -----------------------------------------------------
df = pd.read_csv("../data/processed/monthly_bio_district.csv")
df['date'] = pd.to_datetime(df['date'])

print("Data Loaded Shape:", df.shape)

# -----------------------------------------------------
# Calculate Baseline Statistics (Per District)
# -----------------------------------------------------
stats = (
    df.groupby(['state', 'district'])['total_bio_updates']
    .agg(['mean', 'std'])
    .reset_index()
)

stats.rename(columns={'mean': 'avg_updates', 'std': 'std_updates'}, inplace=True)

# -----------------------------------------------------
# Merge Stats Back to Main Data
# -----------------------------------------------------
df = df.merge(stats, on=['state', 'district'], how='left')

# -----------------------------------------------------
# Define Anomaly Threshold (Early-Warning Rule)
# -----------------------------------------------------
df['upper_threshold'] = df['avg_updates'] + (2 * df['std_updates'])

# -----------------------------------------------------
# Flag Early-Warning Events
# -----------------------------------------------------
df['early_warning'] = np.where(
    df['total_bio_updates'] > df['upper_threshold'], 1, 0
)

# -----------------------------------------------------
# Create Severity Score
# -----------------------------------------------------
df['severity_score'] = (
    (df['total_bio_updates'] - df['avg_updates']) / df['std_updates']
).replace([np.inf, -np.inf], 0).fillna(0)

# -----------------------------------------------------
# Extract Only Warning Records
# -----------------------------------------------------
warnings = df[df['early_warning'] == 1].sort_values(
    by='severity_score', ascending=False
)

print("Total Early-Warning Events Detected:", warnings.shape[0])

# -----------------------------------------------------
# Top 20 Most Severe Warnings
# -----------------------------------------------------
top_warnings = warnings[
    ['date', 'state', 'district', 'total_bio_updates',
     'avg_updates', 'upper_threshold', 'severity_score']
].head(20)

print("Top 20 Early-Warning Signals:")
print(top_warnings)

# -----------------------------------------------------
# Save Outputs
# -----------------------------------------------------
df.to_csv("../data/processed/anomaly_scored_data.csv", index=False)
top_warnings.to_csv("../data/processed/top_early_warnings.csv", index=False)

print("Early-Warning Detection Completed Successfully ðŸš¨")
